!!!
%html
  %head
    %title Viral Message Board
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    .navbar
      .navbar-inner
        .container
          %a{:href => root_url, :class => 'brand'} Viral Message Board
          .nav-collapse
            %ul{:class => 'nav'}
              - if current_user
                %li= "Hello, #{current_user.name}!"
                %li= link_to('Sign out', signout_url)  
              - else
                %li= link_to('Sign in using Twitter', 'auth/twitter')     
    .container
      - unless flash.empty?
        .alert
          - flash.each do |name, msg|
            = content_tag :div, msg, :id => "flash_#{name}" unless msg.blank?
      .hero-unit        
        = yield
      .footer